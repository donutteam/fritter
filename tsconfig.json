{
	"compilerOptions":
	{
		"rootDir": "./src",
		"outDir": "./build",

		"declaration": true,
		"lib":
		[
			"esnext",
		],
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"strict": true,

		// Disabled because FritterRequest and FritterResponse intentionally have uninitialised private properties
		"strictPropertyInitialization": false,

		"target": "ESNext",
	},
	"include":
	[
		"./src/**/*.ts",
	],
}