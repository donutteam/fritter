{
	"extends": "@donutteam/typescript-config",
	"compilerOptions":
	{
		"rootDir": "./src",
		"outDir": "./build",

		"lib":
		[
			"ESNext",
		],

		// Note: Disabled because FritterRequest and FritterResponse intentionally have uninitialised private properties.
		"strictPropertyInitialization": false,
	},
	"include":
	[
		"./src/**/*.ts",
	],
}